<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/treatayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="411dp"
        android:background="@drawable/faceim">

        <ImageView
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/faceimage"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2960"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/treatup_cr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="460"
                tools:ignore="Orientation" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1970"/>

            <ImageView
                android:id="@+id/treatdown_cr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="570"
                tools:ignore="Orientation" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2960"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="460"
                android:weightSum="1"
                android:background="#80FFFFFF"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.27"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.535"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.08"/>

                    <ImageView
                        android:id="@+id/back_treat"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.08"
                        app:srcCompat="@drawable/askimg" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.13"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:letterSpacing="0.1"
                        android:text="CARE GUIDE"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/roboto"
                        tools:layout_editor_absoluteX="176dp"
                        tools:layout_editor_absoluteY="25dp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.13"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.13"
                        app:srcCompat="@drawable/grouphomethera_none_icon"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1970"
                android:weightSum="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.05"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.87"
                    android:weightSum="1440"
                    android:orientation="horizontal">
                    <com.ssomai.android.scalablelayout.ScalableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        app:scale_base_width="1440"
                        app:scale_base_height="1800">

                        <ImageView
                            android:id="@+id/forehead_cr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:scale_height="442.42"
                            app:scale_left="90"
                            app:scale_top="0"
                            app:scale_width="1196.48"
                            app:srcCompat="@drawable/nonforehead"
                            tools:ignore="MissingPrefix" />

                        <ImageView
                            android:id="@+id/eyeleft_cr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:scale_height="365.97"
                            app:scale_left="30"
                            app:scale_top="555"
                            app:scale_width="194.52"
                            app:srcCompat="@drawable/noneyeleft"
                            tools:ignore="MissingPrefix" />

                        <ImageView
                            android:id="@+id/underleft_cr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:scale_height="204"
                            app:scale_left="150"
                            app:scale_top="806"
                            app:scale_width="407"
                            app:srcCompat="@drawable/nonunderleft"
                            tools:ignore="MissingPrefix" />

                        <ImageView
                            android:id="@+id/cheek_left_cr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:scale_height="555"
                            app:scale_left="100"
                            app:scale_top="1000"
                            app:scale_width="354"
                            app:srcCompat="@drawable/cheekleft2"
                            tools:ignore="MissingPrefix" />

                        <ImageView
                            android:id="@+id/cheek_right_cr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:scale_height="555"
                            app:scale_left="930"
                            app:scale_top="1000"
                            app:scale_width="354"
                            app:srcCompat="@drawable/cheekright2"
                            tools:ignore="MissingPrefix" />

                        <ImageView
                            android:id="@+id/underright_cr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:scale_height="204"
                            app:scale_left="850"
                            app:scale_top="806"
                            app:scale_width="407"
                            app:srcCompat="@drawable/nonunderright"
                            tools:ignore="MissingPrefix" />

                        <ImageView
                            android:id="@+id/eyeright_cr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:scale_height="365.97"
                            app:scale_left="1200"
                            app:scale_top="555"
                            app:scale_width="194.52"
                            app:srcCompat="@drawable/noneyeright"
                            tools:ignore="MissingPrefix" />

                        <ImageView
                            android:id="@+id/mouth_cr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:scale_height="536.1"
                            app:scale_left="365"
                            app:scale_top="1200"
                            app:scale_width="644.17"
                            app:srcCompat="@drawable/nonmouth"
                            tools:ignore="MissingPrefix" />

                    </com.ssomai.android.scalablelayout.ScalableLayout>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/component"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="570"
                android:weightSum="1"
                android:orientation="vertical"
                android:background="#80FFFFFF">

                <TextView
                    android:id="@+id/componenttxt_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="DIRECTION"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/roboto" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:weightSum="1"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:weightSum="1"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.28"/>
                            <ImageView
                                android:id="@+id/backw_cr"
                                app:srcCompat="@drawable/backw"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.25"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2960"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2430"/>

            <TextView
                android:id="@+id/componenttxt_cr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_weight="570"
                android:gravity="center"
                android:text="PLEASE SELECT ACTIVATED ZONE"
                android:textAlignment="center"
                android:textColor="#180018"
                app:fontFamily="@font/roboto" />
        </LinearLayout>

    </RelativeLayout>



    <!--underleft-->


    <!--cheekright-->


    <!--cheekleft-->





</android.support.constraint.ConstraintLayout>